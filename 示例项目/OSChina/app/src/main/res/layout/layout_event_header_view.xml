<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/white"
    android:minHeight="200dp">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_banner"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <net.oschina.app.improve.widget.indicator.CirclePagerIndicator
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        app:circle_indicator_centerHorizontal="true"
        app:circle_indicator_color="@color/white"
        app:circle_indicator_fill_color="@color/main_green"
        app:circle_indicator_indicator_radius="3dp"
        app:circle_indicator_radius="2dp" />
</FrameLayout>