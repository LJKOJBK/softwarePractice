<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_green"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:ignore="KeyboardInaccessibleWidget,RtlHardcoded,HardcodedText">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/main_green"
        android:titleTextColor="@color/white"
        app:popupTheme="@style/ToolbarPopupBlackTheme"
        tools:ignore="UnusedAttribute" />

    <View
        style="@style/h_line"
        android:visibility="gone" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/layout_item_bg"
        tools:ignore="KeyboardInaccessibleWidget,RtlHardcoded,HardcodedText">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/bg_my"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/space_16">

                    <net.oschina.app.improve.widget.PortraitView
                        android:id="@+id/iv_avatar"
                        style="@style/UserFaceImageStyle"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        app:civ_border_color="@color/white"
                        app:civ_border_width="2dp" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/lay_4"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_16"
                        tools:text="uni7corn" />

                    <net.oschina.app.improve.widget.IdentityView
                        android:id="@+id/identityView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/lay_4"
                        app:oscColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_join_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/ic_material"
                    android:clickable="true"
                    android:padding="@dimen/space_16">

                    <TextView
                        android:id="@+id/text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/space_4"
                        android:text="@string/join_time"
                        android:textColor="?attr/infoTextColor"
                        android:textSize="@dimen/text_size_16"
                        tools:ignore="RtlHardcoded" />

                    <TextView
                        android:id="@+id/tv_join_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/textColor"
                        android:textSize="@dimen/text_size_16" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/ic_material"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:padding="@dimen/space_16">

                    <TextView
                        android:id="@id/text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/space_4"
                        android:text="@string/location"
                        android:textColor="?attr/infoTextColor"
                        android:textSize="@dimen/text_size_16" />

                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/textColor"
                        android:textSize="@dimen/text_size_16" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_platform"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/ic_material"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:padding="@dimen/space_16">

                    <TextView
                        android:id="@id/text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/space_4"
                        android:text="@string/development_platform"
                        android:textColor="?attr/infoTextColor"
                        android:textSize="@dimen/text_size_16" />

                    <TextView
                        android:id="@+id/tv_development_platform"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/textColor"
                        android:textSize="@dimen/text_size_16" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_skill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/ic_material"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:padding="@dimen/space_16"
                    tools:ignore="KeyboardInaccessibleWidget">

                    <TextView
                        android:id="@id/text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/space_4"
                        android:text="@string/academic_focus"
                        android:textColor="?attr/infoTextColor"
                        android:textSize="@dimen/text_size_16" />

                    <TextView
                        android:id="@+id/tv_academic_focus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/textColor"
                        android:textSize="@dimen/text_size_16" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_sign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/ic_material"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:padding="@dimen/space_16">

                    <TextView
                        android:id="@id/text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/space_4"
                        android:text="个性签名:"
                        android:textColor="?attr/infoTextColor"
                        android:textSize="@dimen/text_size_16"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/tv_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/textColor"
                        android:textSize="@dimen/text_size_16" />
                </LinearLayout>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <net.oschina.app.ui.empty.EmptyLayout
            android:id="@+id/error_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="visible" />
    </FrameLayout>
</LinearLayout>