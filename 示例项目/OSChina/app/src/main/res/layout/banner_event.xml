<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="184dp"
    android:background="@color/white"
    android:minHeight="184dp">

    <net.oschina.app.improve.widget.indicator.BannerView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <net.oschina.app.improve.main.banner.CircleBannerIndicator
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        app:circle_banner_indicator_centerHorizontal="true"
        app:circle_banner_indicator_color="@color/white"
        app:circle_banner_indicator_fill_color="@color/main_green"
        app:circle_banner_indicator_indicator_radius="3dp"
        app:circle_banner_indicator_radius="2dp" />
</RelativeLayout>