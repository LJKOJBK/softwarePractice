<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_pig"
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/lay_16"
        android:layout_marginTop="@dimen/lay_16"
        android:textColor="#111111"
        android:textSize="@dimen/font_16"
        tools:text="750元阿里云代金卷" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/lay_16"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_shake_again"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_shake_again"
            android:text="继续抽奖"
            android:textColor="#D8D8D8" />

        <Button
            android:id="@+id/btn_get"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_shake"
            android:text="免费领取"
            android:textColor="#ffffff" />
    </LinearLayout>
</LinearLayout>