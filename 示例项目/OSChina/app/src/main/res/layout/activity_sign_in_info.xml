<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:titleTextColor="@color/black"
        app:navigationIcon="@mipmap/btn_back_dark_pressed"
        app:popupTheme="@style/ToolbarPopupBlackTheme"
        tools:ignore="UnusedAttribute" />

    <View style="@style/h_line" />


    <TextView
        android:id="@+id/tv_event_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f6f6f6"
        android:padding="@dimen/lay_16"
        android:textColor="#111111"
        android:textSize="18sp"
        tools:text="[长沙] OSC源创会第61期：SDN/NFV在阿里云的技术实践" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/lay_32"
        android:background="@color/white"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="250dp"
            android:layout_height="170dp"
            android:background="@color/white">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/event_sign_info"
                android:scaleType="fitXY"
                android:src="@mipmap/bg_ticket_event_top" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/lay_16"
                    android:layout_marginRight="@dimen/lay_16"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_16"
                    tools:text="您是开源软件作者，f" />

                <TextView
                    android:id="@+id/tv_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="50sp"
                    tools:text="￥20" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="#f6f6f6"
            android:paddingBottom="@dimen/lay_8"
            android:paddingLeft="@dimen/lay_16"
            android:paddingRight="@dimen/lay_16"
            android:paddingTop="@dimen/lay_8">

            <TextView
                android:id="@+id/tv_cost_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#111111"
                android:textSize="@dimen/font_16"
                tools:text="" />
        </FrameLayout>

        <ImageView
            android:layout_width="250dp"
            android:layout_height="18dp"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/event_sign_info"
            android:src="@mipmap/bg_ticket_event_bottom" />
    </LinearLayout>

</LinearLayout>