<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:ignore="HardcodedText,RtlHardcoded">

    <View
        android:id="@+id/viewStatusBar"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/white" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        tools:ignore="UnusedAttribute">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="发现"
            android:textColor="@color/black"
            android:textSize="@dimen/font_16" />

        <ImageButton
            android:id="@+id/btn_search"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="@drawable/bg_material"
            android:contentDescription="发现"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_search"
            android:tint="@color/black" />
    </FrameLayout>

    <View style="@style/h_line" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/rl_zb"
                style="@style/option_item_rl"
                android:background="@drawable/ic_material">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:contentDescription="@null"
                    android:src="@mipmap/ic_discover_zb"
                    tools:ignore="RtlHardcoded" />

                <TextView
                    style="@style/option_item_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/zb" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    app:srcCompat="@mipmap/ic_arrow_right" />
            </LinearLayout>

            <View
                style="@style/h_line"
                android:layout_height="1px"
                android:layout_marginLeft="50dp"
                tools:ignore="RtlHardcoded" />

            <LinearLayout
                android:id="@+id/rl_soft"
                style="@style/option_item_rl"
                android:background="@drawable/ic_material">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:contentDescription="@null"
                    android:src="@mipmap/ic_discover_softwares"
                    tools:ignore="RtlHardcoded" />

                <TextView
                    style="@style/option_item_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/actionbar_title_software_list" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    app:srcCompat="@mipmap/ic_arrow_right" />
            </LinearLayout>


            <View
                style="@style/h_line"
                android:layout_height="1px"
                android:layout_marginLeft="50dp"
                tools:ignore="RtlHardcoded" />

            <LinearLayout
                android:id="@+id/rl_git"
                style="@style/option_item_rl"
                android:background="@drawable/ic_material">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:contentDescription="@null"
                    android:src="@mipmap/ic_discover_git"
                    tools:ignore="RtlHardcoded" />

                <TextView
                    style="@style/option_item_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/git" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    app:srcCompat="@mipmap/ic_arrow_right" />
            </LinearLayout>

            <View
                style="@style/h_line"
                android:layout_height="1px"
                android:layout_marginLeft="50dp"
                tools:ignore="RtlHardcoded" />

            <LinearLayout
                android:id="@+id/rl_gits"
                style="@style/option_item_rl"
                android:background="@drawable/ic_material"
                android:visibility="visible">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:contentDescription="@null"
                    android:src="@mipmap/ic_discover_gist"
                    tools:ignore="RtlHardcoded" />

                <TextView
                    style="@style/option_item_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/gits" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    app:srcCompat="@mipmap/ic_arrow_right" />
            </LinearLayout>

            <View
                style="@style/h_line"
                android:layout_height="1px" />

            <View
                style="@style/h_line"
                android:layout_height="1px"
                android:layout_marginTop="30dp" />

            <LinearLayout
                android:id="@+id/rl_scan"
                style="@style/option_item_rl"
                android:background="@drawable/ic_material">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:contentDescription="@null"
                    android:src="@mipmap/ic_discover_scan" />

                <TextView
                    style="@style/option_item_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/scan" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    app:srcCompat="@mipmap/ic_arrow_right" />
            </LinearLayout>

            <View
                style="@style/h_line"
                android:layout_height="1px"
                android:layout_marginLeft="50dp"
                tools:ignore="RtlHardcoded" />

            <LinearLayout
                android:id="@+id/rl_shake"
                style="@style/option_item_rl"
                android:background="@drawable/ic_material">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:contentDescription="@null"
                    android:src="@mipmap/ic_discover_shake" />

                <TextView
                    style="@style/option_item_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/shake" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    app:srcCompat="@mipmap/ic_arrow_right" />
            </LinearLayout>

            <View
                style="@style/h_line"
                android:layout_height="1px" />


            <View
                style="@style/h_line"
                android:layout_height="1px"
                android:layout_marginTop="25dp" />

            <LinearLayout
                android:id="@+id/layout_nearby"
                style="@style/option_item_rl"
                android:background="@drawable/ic_material">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="@dimen/space_10"
                    android:contentDescription="@null"
                    android:src="@mipmap/ic_discover_nearby"
                    tools:ignore="RtlHardcoded" />

                <TextView
                    style="@style/option_item_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/near_bodies_hint" />

                <ImageView
                    android:id="@+id/iv_has_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/lay_16"
                    android:contentDescription="@null"
                    android:visibility="gone"
                    app:srcCompat="@mipmap/ic_located"
                    tools:ignore="RtlHardcoded"
                    tools:visibility="visible" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    app:srcCompat="@mipmap/ic_arrow_right" />
            </LinearLayout>

            <View
                style="@style/h_line"
                android:layout_height="1px"
                android:layout_marginLeft="50dp"
                tools:ignore="RtlHardcoded" />

            <LinearLayout
                android:id="@+id/layout_events"
                style="@style/option_item_rl"
                android:background="@drawable/ic_material">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="@dimen/space_10"
                    android:contentDescription="@null"
                    android:src="@mipmap/ic_my_event"
                    tools:ignore="RtlHardcoded" />

                <TextView
                    style="@style/option_item_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/offline_event_hint" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    app:srcCompat="@mipmap/ic_arrow_right" />
            </LinearLayout>

            <View
                style="@style/h_line"
                android:layout_height="1px" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>