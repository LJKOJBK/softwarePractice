<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:id="@+id/fl_content"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/lay_16"
            android:layout_marginTop="@dimen/lay_16"
            android:text="将复制的 URL 投递到开源中国？"
            android:textColor="#111111"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/lay_16"
            android:layout_marginRight="@dimen/lay_16"
            android:ellipsize="end"
            android:lines="1"
            android:text="https://www.oschina.net"
            android:textColor="#8f8f8f"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_share"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="@dimen/lay_16"
            android:layout_marginRight="@dimen/lay_16"
            android:layout_marginTop="16dp"
            android:background="@drawable/selector_event_sign_up"
            android:elevation="0dp"
            android:outlineProvider="none"
            android:text="立即投递"
            android:textColor="@color/white"
            tools:ignore="UnusedAttribute" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginBottom="@dimen/lay_16"
            android:layout_marginLeft="@dimen/lay_16"
            android:layout_marginRight="@dimen/lay_16"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_cancel_share"
            android:elevation="0dp"
            android:outlineProvider="none"
            android:text="暂不投递"
            android:textColor="#9d9d9d"
            tools:ignore="UnusedAttribute" />
    </LinearLayout>
</FrameLayout>