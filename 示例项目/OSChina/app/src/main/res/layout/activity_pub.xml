<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_main"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_alpha_128"
    android:fitsSystemWindows="false"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:id="@+id/ll_pub_tweet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:paddingBottom="@dimen/lay_8"
        android:paddingTop="@dimen/lay_8"
        tools:ignore="UseCompoundDrawables">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/lay_4"
            android:layout_marginTop="@dimen/lay_4"
            android:background="@drawable/bg_pub"
            android:paddingBottom="2dp"
            android:paddingLeft="@dimen/lay_8"
            android:paddingRight="@dimen/lay_8"
            android:paddingTop="2dp"
            android:text="发动弹"
            android:textColor="@color/white"
            android:textSize="@dimen/font_12" />

        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_pub_tweet">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:tint="@color/white"
                android:contentDescription="@string/tweet_public"
                android:src="@mipmap/ic_new_tweet" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_pub_article"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:paddingBottom="@dimen/lay_8"
        android:paddingTop="@dimen/lay_8"
        tools:ignore="UseCompoundDrawables">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/lay_4"
            android:layout_marginTop="@dimen/lay_4"
            android:background="@drawable/bg_pub"
            android:paddingBottom="2dp"
            android:paddingLeft="@dimen/lay_8"
            android:paddingRight="@dimen/lay_8"
            android:paddingTop="2dp"
            android:text="投递文章"
            android:textColor="@color/white"
            android:textSize="@dimen/font_12" />

        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_pub_article">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:tint="@color/white"
                android:contentDescription="@string/tweet_public"
                android:src="@mipmap/ic_new_article" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_pub_blog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:paddingBottom="@dimen/lay_8"
        android:paddingTop="@dimen/lay_8"
        tools:ignore="RtlHardcoded,UseCompoundDrawables">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/lay_4"
            android:layout_marginTop="@dimen/lay_4"
            android:background="@drawable/bg_pub"
            android:paddingBottom="2dp"
            android:paddingLeft="@dimen/lay_8"
            android:paddingRight="@dimen/lay_8"
            android:paddingTop="2dp"
            android:text="写博客"
            android:textColor="@color/white"
            android:textSize="@dimen/font_12" />

        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_pub_blog">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:tint="@color/white"
                android:contentDescription="@string/tweet_public"
                android:src="@mipmap/ic_new_blog" />
        </FrameLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/btn_pub"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:contentDescription="@null"
        android:padding="2dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_nav_add_normal" />
</RelativeLayout>