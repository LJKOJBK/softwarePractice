<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/layout_item_bg"
    android:paddingBottom="@dimen/space_10"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_event_status"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_event_img"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_margin="@dimen/space_10" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_event_img"
        android:layout_marginTop="@dimen/space_10"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginRight="@dimen/space_15"
            android:layout_marginBottom="@dimen/space_10"
            android:textColor="?attr/textColor" />

        <TextView
            android:id="@+id/tv_event_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_event_title"
            android:layout_toRightOf="@id/iv_event_img"
            android:textColor="?attr/infoTextColor" />

        <TextView
            android:id="@+id/tv_event_spot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_event_time"
            android:layout_toRightOf="@id/iv_event_img"
            android:textColor="?attr/infoTextColor" />
    </LinearLayout>

</RelativeLayout>