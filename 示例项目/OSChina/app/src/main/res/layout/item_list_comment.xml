<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/ic_material"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/lay_12"
        android:paddingLeft="@dimen/lay_16"
        android:paddingRight="@dimen/lay_16"
        android:paddingTop="@dimen/lay_16">

        <net.oschina.app.improve.widget.PortraitView
            android:id="@+id/iv_user_avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:clickable="true"
            android:src="@mipmap/widget_default_face" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/text_title_color"
                    android:textSize="16sp"
                    tools:text="Large Text" />

                <net.oschina.app.improve.widget.IdentityView
                    android:id="@+id/identityView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/lay_4" />

            </LinearLayout>


            <net.oschina.app.widget.TweetTextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/lay_8"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:includeFontPadding="false"
                android:lineSpacingExtra="@dimen/font_4"
                android:textColor="?attr/textColor"
                android:textSize="14sp"
                tools:text="最近研究了这个项目，学习rx系列,修复了楼主的bug 主要原因里面资讯fragment的构建" />

            <net.oschina.app.widget.TweetTextView
                android:id="@+id/tv_origin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/lay_8"
                android:background="#F6F6F6"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:includeFontPadding="false"
                android:lineSpacingExtra="@dimen/font_4"
                android:padding="10dp"
                android:textColor="?attr/textColor"
                android:textSize="14sp"
                tools:text="最近研究了这个项目，主要原因在里面资讯fragment的构建" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:textColor="#9d9d9d"
                    android:textSize="@dimen/font_12"
                    tools:text="6分钟" />

                <TextView
                    android:id="@+id/tv_platform"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/space_4"
                    android:layout_marginRight="@dimen/space_4"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:textColor="#9d9d9d"
                    android:textSize="@dimen/font_12"
                    tools:text="iPhone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="@dimen/space_8"
                        android:contentDescription="@string/app_name"
                        android:padding="@dimen/space_4"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/ic_comment_30" />

                    <TextView
                        android:id="@+id/tv_comment_count"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textColor="#9d9d9d"
                        android:textSize="@dimen/font_12"
                        tools:text="12" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/h_line"
        android:layout_height="1px"
        android:layout_marginLeft="16dp" />
</LinearLayout>
