<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:minWidth="250dp"
    android:layout_height="wrap_content">

    <TextView
        android:text="为这个答案投票"
        android:textSize="16sp"
        android:textColor="#6A6A6A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/btn_vote_up"
            android:drawableTop="@drawable/selector_full_vote_up"
            android:gravity="center_horizontal"
            android:drawablePadding="4dp"
            android:text="@string/vote_up"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <ProgressBar
            android:id="@+id/progress"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/btn_vote_down"
            android:drawableTop="@drawable/selector_full_vote_down"
            android:gravity="center_horizontal"
            android:drawablePadding="4dp"
            android:text="@string/vote_down"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>