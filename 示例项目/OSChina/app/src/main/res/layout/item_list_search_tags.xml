<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:minHeight="56dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_tag"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/lay_16"
            android:paddingRight="@dimen/lay_16"
            android:text="java"
            android:textColor="@color/text_title_color"
            android:textSize="@dimen/font_16"
            tools:ignore="HardcodedText,NestedWeights" />

        <TextView
            android:id="@+id/tv_relations"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="@dimen/lay_16"
            android:layout_marginRight="@dimen/lay_16"
            android:layout_marginTop="12dp"
            android:background="@drawable/selector_event_sign_up"
            android:gravity="center"
            android:paddingLeft="@dimen/lay_12"
            android:paddingRight="@dimen/lay_12"
            android:text="关注标签"
            android:textSize="13sp"
            android:textColor="@color/white"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <View
        style="@style/h_line"
        android:layout_marginLeft="@dimen/lay_16"
        tools:ignore="RtlHardcoded" />
</LinearLayout>