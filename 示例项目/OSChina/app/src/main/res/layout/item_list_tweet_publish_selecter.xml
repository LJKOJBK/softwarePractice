<?xml version="1.0" encoding="utf-8"?>
<net.oschina.common.widget.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/lay_4"
    app:oscAccordTo="width">

    <ImageView
        android:id="@+id/iv_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#dadada"
        android:clickable="true"
        android:contentDescription="@string/app_name"
        android:padding="0dp" />

    <ImageView
        android:id="@+id/iv_is_gif"
        android:layout_width="30dp"
        android:layout_height="18dp"
        android:layout_gravity="right|bottom"
        android:contentDescription="@string/app_name"
        android:padding="2dp"
        android:scaleType="centerInside"
        android:src="@mipmap/gif"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="@dimen/size_24"
        android:layout_height="@dimen/size_24"
        android:layout_gravity="right|top"
        android:contentDescription="@string/app_name"
        android:paddingBottom="@dimen/lay_4"
        android:paddingLeft="@dimen/lay_4"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_tweet_delete" />
</net.oschina.common.widget.SquareLayout>