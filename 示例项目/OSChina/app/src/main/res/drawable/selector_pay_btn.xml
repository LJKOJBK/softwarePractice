<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape>
            <corners android:radius="2dp" />
            <stroke
                android:color="@color/day_colorPrimary"
                android:dashGap="0dp"
                android:dashWidth="1px"
                android:width="1dp"/>
            <solid android:color="#F9F9F9" />
        </shape>
    </item>

    <item android:state_selected="true">
        <shape>
            <corners android:radius="2dp" />
            <stroke
                android:color="@color/day_colorPrimary"
                android:dashGap="0dp"
                android:dashWidth="1px"
                android:width="1dp"/>
            <solid android:color="#F9F9F9" />
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="2dp" />
            <stroke
                android:color="#cbcace"
                android:dashGap="0dp"
                android:dashWidth="1px"
                android:width="1px"/>
            <solid android:color="#F9F9F9" />
        </shape>
    </item>

</selector>